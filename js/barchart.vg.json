{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/jjsonng/Australia_Water-Usage_Vega-Lite/main/data/data2.csv"
  },
  "title": "Distributed Water Use by Selected Industries and Households, Australia",
  "width": 500,
  "height": 300,
  "params": [
    {
      "name": "Industry_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Agriculture, forestry and fishing",
          "Households",
          "Manufacturing",
          "Mining",
          "Other industries"
        ],
        "labels": [
          "All",
          "Agriculture, forestry and fishing",
          "Households",
          "Manufacturing",
          "Mining",
          "Other industries"
        ],
        "name": "Select Industry: "
      }
    }
  ],
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "axis": {"labelAngle": 0}
        },
        "y": {
          "field": "Value",
          "type": "quantitative",
          "axis": {"title": "Water Usage"}
        },
        "color": {
          "field": "Industry",
          "type": "nominal",
          "scale": {
            "domain": [
              "Other industries",
              "Mining",
              "Manufacturing",
              "Households",
              "Agriculture, forestry and fishing"
            ],
            "range": ["#332288","#117733","#CC6677","#DDCC77","#88CCEE"]
          },
          "legend": {
            "title": "Industry",
            "labelFontSize": 10,
            "titleFontSize": 11
          }
        },
        "order": {
          "field": "Industry",
          "type": "nominal",
          "sort": [
            "Other industries",
            "Mining",
            "Manufacturing",
            "Households",
            "Agriculture, forestry and fishing"
          ]
        },
        "tooltip": [
          {"field": "Year", "type": "ordinal", "title": "Year"},
          {"field": "Industry", "type": "nominal", "title": "Industry"},
          {"field": "Value", "type": "quantitative", "title": "Water Usage (GL)", "format": ".2f"}
        ]
      },
      "transform": [
        {
          "fold": [
            "Agriculture, forestry and fishing",
            "Households",
            "Manufacturing",
            "Mining",
            "Other industries"
          ],
          "as": ["Industry", "Value"]
        },
        {
          "calculate": "replace(datum.Value, ',', '')",
          "as": "Value"
        },
        {
          "calculate": "toNumber(datum.Value)",
          "as": "Value"
        },
        {
          "filter": "Industry_selection == null || datum.Industry == Industry_selection"
        }
      ]
    },
    {
      "mark": {
        "type": "rule",
        "strokeDash": [4, 4],
        "color": "red"
      },
      "encoding": {
        "x": {"datum": "2020-21"}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -5,
        "dy": -10,
        "fontSize": 9
      },
      "encoding": {
        "x": {"datum": "2020-21"},
        "y": {"datum": 8000},
        "text": {"value": "Lowest water usage"},
        "color": {"value": "red"}
      }
    }
  ],
  "selection": {
    "Industry_selection": {
      "type": "multi",
      "fields": ["Industry"],
      "bind": "legend"
    }
  }
}
