{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/jjsonng/Australia_Water-Usage_Vega-Lite/main/data/data2.csv"
  },
  "title": "Distributed Water Use by Selected Industries and Households, Australia",
  "width": 550,
  "height": 300,
  "params": [
    {
      "name": "Industry_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Agriculture, forestry and fishing",
          "Households",
          "Manufacturing",
          "Mining",
          "Other industries"
        ],
        "labels": [
          "All",
          "Agriculture, forestry and fishing",
          "Households",
          "Manufacturing",
          "Mining",
          "Other industries"
        ],
        "name": "Select Industry: "
      }
    }
  ],
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "axis": {"labelAngle": 0}
        },
        "y": {
          "field": "Value",
          "type": "quantitative",
          "axis": {"title": "Water Usage"}
        },
        "color": {
          "field": "Industry",
          "type": "nominal",
          "scale": {
            "domain": [
              "Other industries",
              "Mining",
              "Manufacturing",
              "Households",
              "Agriculture, forestry and fishing"
            ],
            "range": ["#332288","#117733","#CC6677","#DDCC77","#88CCEE"]
          },
          "legend": {
            "title": "Industry",
            "labelFontSize": 10,
            "titleFontSize": 11
          }
        },
        "order": {
          "field": "Industry",
          "type": "nominal",
          "sort": [
            "Other industries",
            "Mining",
            "Manufacturing",
            "Households",
            "Agriculture, forestry and fishing"
          ]
        },
        "tooltip": [
          {"field": "Year", "type": "ordinal", "title": "Year"},
          {"field": "Industry", "type": "nominal", "title": "Industry"},
          {"field": "Value", "type": "quantitative", "title": "Water Usage (GL)", "format": ".2f"}
        ]
      },
      "transform": [
        {
          "fold": [
            "Agriculture, forestry and fishing",
            "Households",
            "Manufacturing",
            "Mining",
            "Other industries"
          ],
          "as": ["Industry", "Value"]
        },
        {
          "calculate": "replace(datum.Value, ',', '')",
          "as": "Value"
        },
        {
          "calculate": "toNumber(datum.Value)",
          "as": "Value"
        },
        {
          "filter": "Industry_selection == null || datum.Industry == Industry_selection"
        }
      ]
    },
    {
      "mark": {
        "type": "rule",
        "strokeDash": [6, 4],
        "size": 2,
        "color": "red"
      },
      "encoding": {
        "x": {"field": "Year", "type": "ordinal"},
        "y": {"field": "TotalValue", "type": "quantitative"},
        "opacity": {
          "condition": {"test": "datum.is_min", "value": 1},
          "value": 0
        }
      },
      "transform": [
        {
          "fold": [
            "Agriculture, forestry and fishing",
            "Households",
            "Manufacturing",
            "Mining",
            "Other industries"
          ],
          "as": ["Industry", "Value"]
        },
        {
          "calculate": "replace(datum.Value, ',', '')",
          "as": "Value"
        },
        {
          "calculate": "toNumber(datum.Value)",
          "as": "Value"
        },
        {
          "filter": "Industry_selection == null || datum.Industry == Industry_selection"
        },
        {
          "aggregate": [{"op": "sum", "field": "Value", "as": "TotalValue"}],
          "groupby": ["Year"]
        },
        {
          "window": [{"op": "min", "field": "TotalValue", "as": "MinValue"}],
          "frame": [null, null]
        },
        {
          "calculate": "datum.TotalValue == datum.MinValue",
          "as": "is_min"
        }
      ]
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "bottom",
        "dy": -10,
        "fontSize": 10,
        "fontWeight": "bold",
        "color": "red"
      },
      "encoding": {
        "x": {"field": "Year", "type": "ordinal"},
        "y": {"field": "TotalValue", "type": "quantitative"},
        "text": {"value": "Lowest Usage"},
        "opacity": {
          "condition": {"test": "datum.is_min", "value": 1},
          "value": 0
        }
      },
      "transform": [
        {
          "fold": [
            "Agriculture, forestry and fishing",
            "Households",
            "Manufacturing",
            "Mining",
            "Other industries"
          ],
          "as": ["Industry", "Value"]
        },
        {
          "calculate": "replace(datum.Value, ',', '')",
          "as": "Value"
        },
        {
          "calculate": "toNumber(datum.Value)",
          "as": "Value"
        },
        {
          "filter": "Industry_selection == null || datum.Industry == Industry_selection"
        },
        {
          "aggregate": [{"op": "sum", "field": "Value", "as": "TotalValue"}],
          "groupby": ["Year"]
        },
        {
          "window": [{"op": "min", "field": "TotalValue", "as": "MinValue"}],
          "frame": [null, null]
        },
        {
          "calculate": "datum.TotalValue == datum.MinValue",
          "as": "is_min"
        }
      ]
    }
  ],
  "selection": {
    "Industry_selection": {
      "type": "multi",
      "fields": ["Industry"],
      "bind": "legend"
    }
  }
}
