{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 300,
  "title": "Water Stations around Australia",
  "projection": {"type": "equirectangular"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jjsonng/Water-Usage-Aus-Vis/main/data/aus_map.json",
        "format": {"type": "topojson", "feature": "collection"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "graticule": {"extent": [[110, -45], [155, -10]]}
      },
      "mark": {"type": "geoshape", "stroke": "lightgray", "strokeWidth": 0.5}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jjsonng/Water-Usage-Aus-Vis/main/data/water_stations_centroids.csv"
      },
      "mark": {"type": "circle"},
      "encoding": {
        "tooltip": [
          {"field": "Data Owner", "type": "nominal", "title": "Water Station Owner"},
          {"field": "Count", "type": "quantitative", "title": "# of Stations", "format": ","},
          {"field": "Percentage", "type": "quantitative", "title": "% within State"}
        ],
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "size": {"field": "Stations", "type": "quantitative"},
        "color": {
          "field": "Location",
          "scale": {
            "range": ["#88CCEE", "#DDCC77", "#117733", "#332288", "#AA4499", "#44AA99", "#999933", "#882255"]
          }
        }
      }
    }
  ]
}
